<div class="col-xs-3">
	<h2>User info</h2>
	<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
	<table class="table">
		<tbody>
			<tr>
				<th>name</th>
				<th><%= @user.name %></th>
			</tr>
			<tr>
				<th>introduction</th>
				<th><%= @user.introduction %></th>
			</tr>
		</tbody>
	</table>
	<div class="row">
		<% if @book_user == current_user.id %>
			<%= link_to "", edit_user_path(@user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
		<% else %>
			<%= link_to "", "#", class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
		<% end %>
	</div>
	<h2>New book</h2>
	<%= form_for(book) do |f| %>
		<div class="row">
			<p>Title</p>
			<%= f.text_field :title, class: "col-xs-12" %>
		</div>
		<div class="row">
			<p>Opinion</p>
			<%= f.text_area :body, class: "col-xs-12" %>
		</div>
		<div class="row">
			<p></p>
			<%= f.submit "Create Book", class: "col-xs-12 btn btn-primary btn-lg" %>
		</div>
	<% end %>
</div>