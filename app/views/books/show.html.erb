<div class="container">
	<p id="notice"><%= notice %></p>
	<div class="row">

		<%= render 'books/post', book: @book, user: @user %>

		<div class="col-xs-9">
			<h2>Book detail</h2>
			<table class="table">
				<tbody>
					<tr>
						<td>
							<%= link_to user_path(@user.id) do %>
								<%= attachment_image_tag @user, :profile_image, size: "50x50", format: 'jpeg', fallback: "no_image.jpg" %>
							<% end %>
						</td>
						<td><%= link_to @book_show.title, book_path(@book_show.id) %></td>
						<td><%= @book_show.body %></td>
						<!-- ユーザーが投稿したもののみ、編集と削除のボタンを表示する -->
						<% if @book_show.user == current_user %>
							<th><%= link_to "Edit", edit_book_path(@book_show.id), class: "btn-sm btn-success" %></th>
							<th><%= link_to "Destroy", book_path, method: :delete, "data-confirm" => "本当に削除しますか？", class:
							"btn-sm btn-danger" %></th>
						<% end %>
					</tr>
				</tbody>
			</table>
		</div>
	</div>
</div>