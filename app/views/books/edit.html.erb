<div class="container">
	<p id="notice"><%= notice %></p>
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<h1>Editing Book</h1>
			<%= form_for(@book) do |f| %>

				<% if @book.errors.any? %>
					<div id="error_explanation">
						<h2><%= pluralize(@book.errors.count, "eroor") %>errors prohibited this obj from being saved:</h2>
						<ul>
							<% @book.errors.full_messages.each do |message| %>
							<li><%= message %></li>
							<% end %>
						</ul>
					</div>
				<% end %>

				<div class="row">
					<h5>Title</h5>
					<%= f.text_field :title, class: "col-xs-12" %>
				</div>
				<div class="row">
					<h5>Opinion</h5>
					<%= f.text_area :body, class: "col-xs-12" %>
				</div>
				<div class="row">
					<p></p>
					<%= f.submit "Update Book", class: "btn btn-primary col-xs-12" %>
				</div>
			<% end %>
			<div class="row">
				<div class="link-box col-xs-12"> <br>
					<%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", books_path %>
				</div>
			</div>
		</div>
	</div>
</div>