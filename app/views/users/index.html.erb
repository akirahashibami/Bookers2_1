<div class="container">
	<p class="notice"></p>
	<div class="row">

		<%= render 'books/post', book: @book %>

		<div class="col-xs-9">
			<h2>Users</h2>
			<table class="table table-hover table-inverse">
				<thead>
					<tr>
						<th>image</th>
						<th>name</th>
						<th colspan="3"></th>
					</tr>
				</thead>
				<tbody>
					<% @users.each do |user| %>
					<tr>
						<td></td>
						<td><%= user.name %></td>
						<td><%= user.introduction %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>